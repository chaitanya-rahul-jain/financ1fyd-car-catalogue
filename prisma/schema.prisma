generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Car {
  id          String   @id @default(uuid())
  make        String
  model       String
  year        Int
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id          String   @id @default(uuid())
  username    String   @unique
  password    String
  createdAt   DateTime @default(now())
}

